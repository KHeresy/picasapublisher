    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    x:Class="PicasaUpload.UI.LoginWindow" Height="316" FontFamily="./Fonts/#Segoe UI" FontSize="12" Loaded="UserControl_Loaded" Title="Picasa Publisher - Login" ResizeMode="NoResize" WindowStartupLocation="CenterOwner" WindowStyle="ToolWindow" SizeToContent="WidthAndHeight">
