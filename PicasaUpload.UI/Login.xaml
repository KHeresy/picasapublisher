        <Button Height="23" HorizontalAlignment="Right" Margin="0,245,10,0" Name="_cmdCancel" VerticalAlignment="Top" Width="75" IsCancel="True" TabIndex="5" Click="_cmdCancel_Click" FontFamily="./Fonts/#Segoe UI" FontSize="12">Cancel</Button>
