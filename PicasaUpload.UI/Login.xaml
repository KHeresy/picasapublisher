        <TextBox Height="32.8" Margin="13,41,11,0" Name="textBox1" VerticalAlignment="Top" IsReadOnly="True" AllowDrop="False" BorderThickness="0" HorizontalScrollBarVisibility="Disabled" TextWrapping="Wrap">If you have suggestions, or just find this tool useful, please Leave Feedback.</TextBox>
        <Button Background="White" FontFamily="./Fonts/#Segoe UI" FontSize="12" Height="23" Margin="12,12,10,0" Name="_cmdUpgrade" VerticalAlignment="Top" BorderBrush="#FFFF6361" Click="_cmdUpgrade_Click">New Version Available</Button>
        <Button FontFamily="./Fonts/#Segoe UI" FontSize="12" Height="23" IsDefault="False" Margin="138,0,90,11" Name="_cmdQuickUpload" TabIndex="4" VerticalAlignment="Bottom" Click="_cmdQuickUpload_Click" ToolTip="Uploads to your Drop Box, using the same settings as the last upload.">Quick Upload</Button>
